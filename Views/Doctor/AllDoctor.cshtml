@model IEnumerable<HospitalSystem.ViewModels.DoctorViewModel>
@{
    ViewBag.Title = "AllDoctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 class="card-title">Doctors</h2>

<p>
    @Html.ActionLink("Create New", "Insert")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoctorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorExpertise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorDegree)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorExpertise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeName)
            </td>




            <td>
                @Html.ActionLink("Edit", "EditDoctor", new { id = item.DoctorID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DoctorID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DoctorID })
            </td>
        </tr>
    }

</table>
